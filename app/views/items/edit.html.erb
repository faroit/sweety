<h1>Editing item</h1>

<%= error_messages_for :item %>

<% form_for(@item, :html => { :multipart => true }) do |f| %>
  <p>
    <b>Barcode</b><br />
    <%= f.text_field :barcode %>
  </p>

  <p>
    <b>Shop</b><br />
    <%= f.collection_select :shop_id, Shop.find(:all), :id, :name %>
  </p>

  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Price</b><br />
    <%= f.text_field :price %>
  </p>

  <p>
    <b>Cost</b><br />
    <%= f.text_field :cost %>
  </p>

  <p>
    <b>Bildupload</b><br />
	Upload: <%= f.file_field :photo %><br>
	  oder URL angeben: <%= f.text_field :photo_url, :size => 75 %><br>

  </p>
 

  <p>
    <b>Joule</b><br />
    <%= f.text_field :joule %>
  </p>

  <p>
    <b>Stock</b><br />
    <%= f.text_field :stock %>
  </p>


  <p>
    <b>Discount thres</b><br />
    <%= f.text_field :discount_thres %>
  </p>

  <p>
    <b>Discount</b><br />
    <%= f.text_field :discount %>
  </p>

  <p>
    <b>Sell limit</b><br />
    <%= f.text_field :sell_limit %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @item %> |
<%= link_to 'Back', items_path %>

<h1>New user</h1>

<%= error_messages_for :user %>

<% form_for(@user, :html => { :multipart => true }) do |f| %>
    <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Mail</b><br />
    <%= f.text_field :mail %>
  </p>

 
  <p>
    <b>Amount</b><br />
    <%= f.text_field :amount %>
  </p>

  <p>
    <b>Budget</b><br />
    <%= f.text_field :budget %>
  </p>

  <p>
    <b>Joule budget</b><br />
    <%= f.text_field :joule_budget %>
  </p>

  <p>
	Avatar: <%= f.file_field :avatar %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>

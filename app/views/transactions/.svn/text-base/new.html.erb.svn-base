<h1>Neue Transaktion</h1>

<%= error_messages_for :transaction %>

<% form_for(@transaction) do |f| %>
  <p>
    <b>User</b><br />
    <%= f.text_field :user_id %>
  </p>

  <p>
    <b>Item</b><br />
    <%= f.text_field :item_id %>
  </p>

  <p>
    <b>Amount</b><br />
	- <%= f.check_box(:pm) %>
    <%= f.text_field :amount %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', transactions_path %>
